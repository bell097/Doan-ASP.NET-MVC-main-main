@model IEnumerable<Doan_ASP.NET_MVC.Models.Category>

@{
    ViewBag.Title = "Home Page";
}

<!-- Begin Slider With Category Menu Area -->
<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Category Menu Area -->
            <div class="col-lg-3">
                <!--Category Menu Start-->
                <div class="category-menu">
                    <div class="category-heading">
                        <h2 class="categories-toggle"><span>Danh mục</span></h2>
                    </div>
                    <div id="cate-toggle" class="category-menu-list">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li class="right-menu">

                                    <a href="@Url.Action("Product_Index", "Product", new {id = item.category_id , brandid = 0, originid = 0, saleid = 0 })">@item.category_name</a>
                                    <ul style="width:470px" class="cat-mega-menu">

                                        <li class="right-menu cat-mega-title">
                                            <a href="shop-left-sidebar.html">Thương Hiệu</a>
                                            @{
                                                Html.RenderAction("Getbrand", "Home", new { id = item.category_id });
                                            }
                                        </li>
                                        <li class="right-menu cat-mega-title">
                                            <a href="shop-left-sidebar.html">Xuất Xứ</a>
                                            @{
                                                Html.RenderAction("Getorigin", "Home", new { id = item.category_id });
                                            }
                                        </li>
                                        <li class="right-menu cat-mega-title">
                                            <a href="shop-left-sidebar.html">Giảm Giá</a>
                                            @{
                                                Html.RenderAction("Getsale", "Home", new { id = item.category_id });
                                            }
                                        </li>

                                    </ul>

                                </li>
                            }
                            <li class="rx-child"><a href="#">Mobile & Tablets</a></li>
                            <li class="rx-child"><a href="#">Accessories</a></li>
                            <li class="rx-parent">
                                <a class="rx-default">Thêm danh mục</a>
                                <a class="rx-show">Bớt danh mục</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <!--Category Menu End-->
            </div>
            <!-- Category Menu Area End Here -->
            <!-- Begin Slider Area -->
            <div class="col-lg-9">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-4">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>Giảm giá <span> -20% </span> tuần này</h5>
                                <h2>Iphone 12 promax 256G</h2>
                                <h3>Bắt đầu chỉ với <span>25.480.000 Đ</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Shopping Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-01 bg-5">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>Giảm giá <span> -20% </span> tuần này</h5>
                                <h2>Iphone 12 promax 256G</h2>
                                <h3>Bắt đầu chỉ với <span>25.480.000 Đ</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Shopping Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-6">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5>Giảm giá <span> -20% </span> tuần này</h5>
                                <h2>Iphone 12 promax 256G</h2>
                                <h3>Bắt đầu chỉ với <span>25.480.000 Đ</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Shopping Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Slide Area End Here -->
                    </div>
                </div>
            </div>
            <!-- Slider Area End Here -->
        </div>
    </div>
</div>
<!-- Slider With Category Menu Area End Here -->
